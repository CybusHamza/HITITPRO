<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/app_bar"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            tools:context=".Activities.Add_Client">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_first_name"
                android:digits="1234567890qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:layout_margin="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_last_name"
                android:digits="1234567890qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:singleLine="true"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_email" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:singleLine="true"
                android:textColor="@color/black"
                android:inputType="phone"
                android:layout_margin="10dp"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_contact"
                android:maxLength="14"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fax"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_fax" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Website"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_website" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_address" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Information"
                android:singleLine="true"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_company_info" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_weight="3"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="60dp">

                <Button
                    android:id="@+id/change_logo_button"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:text="Change Logo"
                    android:background="@drawable/outline_active_style"
                    android:layout_weight="1.25"
                    android:typeface="serif"
                    android:textSize="25sp"
                    android:layout_gravity="center"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1.5"
                    android:layout_marginLeft="30dp"

                    android:layout_gravity="right|center"
                    android:background="@android:drawable/ic_menu_gallery"/>
            </LinearLayout>


            <Button
                android:id="@+id/update_profile"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/outline_active_style"
                android:padding="20dp"
                android:text="Update"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>