<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/house_bkg"
        tools:context=".Activities.Add_Client">

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_image="@drawable/user"
            app:mtf_hasFocus="true"
            app:mtf_openKeyboardOnFocus="false"
            android:layout_marginTop="30dp"
            android:id="@+id/first_name">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_first_name"
                android:digits="qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"/>

        </com.github.florent37.materialtextfield.MaterialTextField>
        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_image="@drawable/user"
            app:mtf_hasFocus="false"
            app:mtf_openKeyboardOnFocus="false"
            android:layout_marginTop="30dp"
            android:id="@+id/last_name">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_last_name"
                android:digits="qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"/>

        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_image="@drawable/user"
            app:mtf_hasFocus="false"
            app:mtf_openKeyboardOnFocus="false"
            android:layout_marginTop="30dp"
            android:id="@+id/user_email">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_email" />

        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_image="@drawable/gender"
            app:mtf_hasFocus="false"
            app:mtf_openKeyboardOnFocus="false"
            android:layout_marginTop="20dp"
            android:id="@+id/user_contact">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:singleLine="true"
                android:textColor="@color/black"
                android:inputType="phone"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_contact"
                android:maxLength="14"/>

        </com.github.florent37.materialtextfield.MaterialTextField>
        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_image="@drawable/gender"
            app:mtf_hasFocus="false"
            app:mtf_openKeyboardOnFocus="false"
            android:layout_marginTop="20dp"
            android:id="@+id/user_fax">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fax"
                android:singleLine="true"
                android:textColor="@color/black"
                android:inputType="text"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_fax" />

        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_hasFocus="false"
            app:mtf_image="@drawable/location"
            app:mtf_openKeyboardOnFocus="false"
            android:layout_marginTop="30dp"
            android:id="@+id/user_website">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Website"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_website" />

        </com.github.florent37.materialtextfield.MaterialTextField>
        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_hasFocus="false"
            app:mtf_image="@drawable/location"
            app:mtf_openKeyboardOnFocus="false"
            android:layout_marginTop="30dp"
            android:id="@+id/user_address">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_address" />

        </com.github.florent37.materialtextfield.MaterialTextField>
        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_hasFocus="false"
            app:mtf_image="@drawable/location"
            app:mtf_openKeyboardOnFocus="false"
            android:layout_marginTop="30dp"
            android:id="@+id/user_company_info">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Information"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_company_info" />

        </com.github.florent37.materialtextfield.MaterialTextField>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="60dp">

            <Button
                android:id="@+id/change_logo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Logo"
                android:typeface="serif"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="@android:drawable/ic_menu_gallery"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/update_profile"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:typeface="serif"
            android:padding="20dp"
            android:background="@drawable/round_corner_button"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>
</ScrollView>