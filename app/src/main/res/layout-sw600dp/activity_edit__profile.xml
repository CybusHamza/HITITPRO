<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/app_bar"
        xmlns:android="http://schemas.android.com/apk/res/android" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Activities.Add_Client">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_first_name"
                android:digits="1234567890qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                />
            <EditText
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:digits="1234567890qwertzuiopasdfghjklyxcvbnmABCDEFGHIJKLMNOPQRSTUVWXYZ" android:hint="Last Name"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:singleLine="true"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:editable="false"
                android:id="@+id/et_user_email" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:singleLine="true"
                android:textColor="@color/black"
                android:inputType="phone"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:id="@+id/et_user_contact"
                android:maxLength="14"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fax"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fax"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:inputType="phone"
                android:textSize="15sp"
                android:id="@+id/et_user_fax"
                android:maxLength="14"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Website"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_website" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:singleLine="true"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/et_user_address" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Information"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Information"
                android:singleLine="true"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:id="@+id/et_user_company_info" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_weight="3"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="60dp">

                <Button
                    android:id="@+id/change_logo_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Change Logo"
                    android:background="@drawable/outline_active_style"
                    android:layout_weight="1.25"
                    android:typeface="serif"
                    android:layout_gravity="center"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1.5"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="right"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/update_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/outline_active_style"
                android:padding="5dp"
                android:text="Update"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="60dp"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>