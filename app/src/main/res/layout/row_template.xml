<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Name"
        android:id="@+id/client_name"
        android:typeface="sans"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:maxLines="1" />
    <TextView
        android:id="@+id/template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:typeface="sans"
        android:textStyle="bold"
        android:textColor="#515050"
        android:paddingTop="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="Template Name"
        android:layout_below="@+id/client_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inspection Name"
        android:textSize="15sp"
        android:visibility="gone"
        android:id="@+id/inspection"
        android:typeface="sans"
        android:paddingTop="3dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/template"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/editTemplate"
        android:src="@drawable/edit_selector"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/deleteTemplate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:id="@+id/deleteTemplate"
        android:src="@drawable/delet_selector"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editTemplate"
        android:layout_toStartOf="@+id/editTemplate" />
</RelativeLayout>